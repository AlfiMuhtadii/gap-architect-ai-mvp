POSTGRES_PORT=5432
DATABASE_URL=postgresql+psycopg://gap:change_me@postgres:5432/gap_architect
ASYNC_DATABASE_URL=postgresql+asyncpg://gap:change_me@postgres:5432/gap_architect

NEXT_PUBLIC_API_BASE=http://localhost

MAX_RESUME_CHARS=20000
MAX_JD_CHARS=20000
