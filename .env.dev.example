APP_ENV=development
APP_NAME=gap-architect
API_V1_STR=/api/v1
DEBUG=true
POSTGRES_IMAGE=postgres:16
REDIS_IMAGE=redis:7-alpine
OLLAMA_IMAGE=ollama/ollama:latest
POSTGRES_EXPOSE_PORT=5433
REDIS_EXPOSE_PORT=6379
BACKEND_EXPOSE_PORT=8000
FRONTEND_EXPOSE_PORT=3000
OLLAMA_EXPOSE_PORT=11434
OLLAMA_HOST=0.0.0.0

POSTGRES_DB=gap_architect
POSTGRES_USER=gap
POSTGRES_PASSWORD=gap
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
DATABASE_URL=postgresql+psycopg://gap:gap@postgres:5432/gap_architect
ASYNC_DATABASE_URL=postgresql+asyncpg://gap:gap@postgres:5432/gap_architect

NEXT_PUBLIC_API_BASE=http://localhost:8000

MAX_RESUME_CHARS=20000
MAX_JD_CHARS=20000
MAX_PROMPT_CHARS=60000

RATE_LIMIT_PER_MINUTE=120
RATE_LIMIT_MAX_KEYS=10000
RATE_LIMIT_KEY_HEADER=
REDIS_URL=

LLM_PROVIDER=compatible
LLM_API_KEY=
LLM_MODEL=meta-llama/Meta-Llama-3-8B-Instruct
