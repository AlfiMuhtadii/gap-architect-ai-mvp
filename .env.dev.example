LLM_TIMEOUT_SECONDS=30

LOCAL_LLM_MODEL=llama3.1
LOCAL_LLM_BASE_URL=http://ollama:11434
MAX_CONCURRENT_GAP_JOBS=4
PENDING_TIMEOUT_SECONDS=600
RETRY_COOLDOWN_SECONDS=15
