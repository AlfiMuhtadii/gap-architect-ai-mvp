APP_ENV=production
APP_NAME=gap-architect
API_V1_STR=/api/v1
DEBUG=false
POSTGRES_IMAGE=postgres:15-alpine
REDIS_IMAGE=redis:7-alpine
OLLAMA_IMAGE=ollama/ollama:latest
NGINX_IMAGE=nginx:1.25-alpine
OLLAMA_HOST=0.0.0.0
NGINX_EXPOSE_PORT=80
OLLAMA_EXPOSE_PORT=11434
NODE_ENV=production

POSTGRES_DB=gap_architect
